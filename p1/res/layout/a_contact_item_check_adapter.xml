<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal">
	<ImageView android:id="@+id/contact_icon"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:background="@drawable/contact" />
	<CheckBox android:id="@+id/contact_check"
		android:layout_alignParentRight="true" android:layout_centerVertical="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="10dip"></CheckBox>
	<TextView android:id="@+id/context_text" android:layout_width="wrap_content"
		android:layout_toRightOf="@id/contact_icon" android:layout_toLeftOf="@id/contact_check"
		android:layout_height="50dip" android:singleLine="true"
		android:text="test" android:gravity="center_vertical" />
</RelativeLayout>
